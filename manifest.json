{
  "manifest_version": 2,

  "name": "CoolNewTab",
  "description": "Chrome Extensions for a custom new Tab",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
        "chrome://favicon/",
    "https://*/*",
    "geolocation",
    "unlimitedStorage",
    "topSites",
    "bookmarks"
  ], 
  "chrome_url_overrides" : {
    "newtab": "newTab.html"
  }
}
